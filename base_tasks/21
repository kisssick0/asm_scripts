; Вывести строку (2) белыми буквами, затем через

ASSUME CS:MYCODE 
ASSUME DS:MYDATA

MYDATA SEGMENT
MYSTR1 DB "Kozlova Alina",0
MYSTR2 DB "435njgwje4 2000",0
WHITE DB 00001111b
RED DB 00001100b
YELLOW DB 00001110b
GREEN DB 00001010b
LIGHTBLUE DB 00001011b
BLUE DB 00001001b
VIOLET DB 00001101b
MYDATA ENDS

MYCODE SEGMENT
MYENTRY:
; initialization segment registr
MOV AX, MYDATA 
MOV DS, AX      ;DS <---MYDATA

; nastroika na videobufer
MOV AX, 0B800H
MOV ES, AX       ;ES <---VIDEOBUFFER

;pileznaya rabota
MOV BP, 0
MOV DX, 0FH

CYCLE1:
	MOV CX, 0FFFFH
CYCLE2:
	DEC CX
	JNZ CYCLE2
	DEC DX
	JNZ CYCLE1

ZVET:
MOV DI, 0
MOV SI, 1660
MOV AH, DS:[WHITE+BP]
INC BP
CMP BP, 8
JZ KONEZ


ZAGRUZKABUF:
;zagruzka v bufer
MOV AL, DS:[MYSTR2+DI] ; AL <--- letter
MOV ES:[SI], AX
INC DI
ADD SI, 2
CMP DS:[MYSTR2+DI], 0
JNZ ZAGRUZKABUF
MOV DX, 0FH
JZ CYCLE1

KONEZ:

MOV AX, 4C00H
INT 21H

MYCODE ENDS
END MYENTRY
