; Плавно перемещать строку вверх до конца экрана

ASSUME CS:MYCODE 
ASSUME DS:MYDATA

MYDATA SEGMENT
MYSTR1 DB "Kozlova Alina",0
MYSTR2 DB "jvhds67b 2000",0
MYDATA ENDS

MYCODE SEGMENT
MYENTRY:
MOV AX, MYDATA 
MOV DS, AX
MOV AX, 0B800h
MOV ES, AX

MOV BP, 0
MOV DX, 0Fh
MOV DI, 0
MOV SI, 3900

START_ZAGRUZKA:
MOV BX, 01h
ZAGRUZKABUF:
MOV AL, DS:[MYSTR2+DI]
MOV AH, 01110010b
MOV ES:[SI], AX
INC BX
INC DI
ADD SI, 2
CMP DS:[MYSTR2+DI], 0
JNZ ZAGRUZKABUF
MOV DX, 0FH
MOV DI, 0

CYCLE1:
	MOV CX, 0FFFFH
CYCLE2:
	DEC CX
	JNZ CYCLE2
	DEC DX
	JNZ CYCLE1

MOV CX, 58

UDALENIEBUF:
MOV AL, 0h
MOV AH, 0h
MOV ES:[SI], AX
DEC BX
SUB SI, 2
CMP SI, CX
JZ KONEZ
CMP BX, 0
JNZ UDALENIEBUF
ADD SI, 24
SUB SI, 182
JMP START_ZAGRUZKA


KONEZ:
MOV AX, 4C00H
INT 21H

MYCODE ENDS
END MYENTRY